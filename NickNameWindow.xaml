<Window x:Class="EternalReturnOverlay.NickNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Nickname" Height="150" Width="300">
    <Grid>
        <StackPanel>
            <TextBox Name="NickNameInput" FontSize="24" Margin="10"/>
            <Button Content="Submit" Click="SubmitButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>